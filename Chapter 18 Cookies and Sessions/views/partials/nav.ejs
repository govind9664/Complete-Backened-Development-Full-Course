<header class="bg-red-500 text-white p-4 shadow-md">
  <nav class="container mx-auto flex justify-between items-center">
    <ul class="flex space-x-4">
      <li>
        <a
          href="/"
          class="<%= currentPage === 'index' ? 'bg-red-400' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300"
          >AirBNB</a
        >
      </li>
      <% if (isLoggedIn) { %>
      <li>
        <a
          href="/homes"
          class="<%= currentPage === 'home-list' ? 'bg-red-400' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300"
          >Home</a
        >
      </li>
      <li>
        <a
          href="/host/host-home-list"
          class="<%= currentPage === 'host-home-list' ? 'bg-red-400' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300"
          >Host Home</a
        >
      </li>
      <li>
        <a
          href="/host/add-home"
          class="<%= currentPage === 'add-home' ? 'bg-red-400' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300"
          >Add Home</a
        >
      </li>
      <li>
        <a
          href="/bookings"
          class="<%= currentPage === 'bookings' ? 'bg-red-400' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300"
          >Bookings</a
        >
      </li>
      <li>
        <a
          href="/favourites"
          class="<%= currentPage === 'favourite-list' ? 'bg-red-400' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300"
          >Favourites List</a
        >
      </li>
      <% } %> <% if (!isLoggedIn) { %>
      <li>
        <a
          href="/login"
          class="hover:bg-red-400 py-2 px-4 rounded transition duration-300"
          >Login</a
        >
      </li>
      <% } %> <% if (isLoggedIn) { %>
      <form action="/logout" method="POST">
        <button
          type="submit"
          class="hover:bg-red-400 py-2 px-4 rounded transition duration-300"
        >
          Logout
        </button>
      </form>
      <% } %>
    </ul>
  </nav>
</header>
