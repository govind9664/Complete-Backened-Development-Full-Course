<header
  class="bg-gradient-to-r from-red-500 to-yellow-400 text-white shadow-lg sticky top-0 z-50"
>
  <nav class="container mx-auto flex justify-between items-center py-3 px-2">
    <div class="flex items-center gap-3">
      <a
        href="/"
        class="flex items-center gap-2 text-2xl font-extrabold tracking-tight"
      >
        <span class="bg-white rounded-full p-1"
          ><i class="fa fa-home text-red-500"></i
        ></span>
        <span class="hidden sm:inline">AirBNB</span>
      </a>
    </div>
    <ul class="flex space-x-2 sm:space-x-4 items-center font-medium">
      <% if (isLoggedIn) { %> <% if(user && user.userType === 'guest') { %>
      <li>
        <a
          href="/homes"
          class="flex items-center gap-1 px-4 py-2 rounded-lg transition duration-200 <%= currentPage === 'home-list' ? 'bg-white text-red-500 shadow' : 'hover:bg-white hover:text-red-500' %>"
        >
          <i class="fa fa-building"></i> Home
        </a>
      </li>
      <li>
        <a
          href="/favourites"
          class="flex items-center gap-1 px-4 py-2 rounded-lg transition duration-200 <%= currentPage === 'favourite-list' ? 'bg-white text-red-500 shadow' : 'hover:bg-white hover:text-red-500' %>"
        >
          <i class="fa fa-heart"></i> Favourites
        </a>
      </li>
      <li>
        <a
          href="/bookings"
          class="flex items-center gap-1 px-4 py-2 rounded-lg transition duration-200 <%= currentPage === 'bookings' ? 'bg-white text-red-500 shadow' : 'hover:bg-white hover:text-red-500' %>"
        >
          <i class="fa fa-calendar-check"></i> Bookings
        </a>
      </li>
      <% } else { %>
      <li>
        <a
          href="/host/host-home-list"
          class="flex items-center gap-1 px-4 py-2 rounded-lg transition duration-200 <%= currentPage === 'host-home-list' ? 'bg-white text-red-500 shadow' : 'hover:bg-white hover:text-red-500' %>"
        >
          <i class="fa fa-user-tie"></i> Host Home
        </a>
      </li>
      <li>
        <a
          href="/host/add-home"
          class="flex items-center gap-1 px-4 py-2 rounded-lg transition duration-200 <%= currentPage === 'add-home' ? 'bg-white text-red-500 shadow' : 'hover:bg-white hover:text-red-500' %>"
        >
          <i class="fa fa-plus-circle"></i> Add Home
        </a>
      </li>
      <% } %> <% } %> <% if (!isLoggedIn) { %>
      <li>
        <a
          href="/login"
          class="flex items-center gap-1 px-4 py-2 rounded-lg transition duration-200 hover:bg-white hover:text-red-500"
        >
          <i class="fa fa-sign-in-alt"></i> Login
        </a>
      </li>
      <li>
        <a
          href="/signup"
          class="flex items-center gap-1 px-4 py-2 rounded-lg transition duration-200 hover:bg-white hover:text-red-500"
        >
          <i class="fa fa-user-plus"></i> Sign up
        </a>
      </li>
      <% } %> <% if (isLoggedIn) { %>
      <li>
        <form action="/logout" method="POST" class="inline">
          <button
            type="submit"
            class="flex items-center gap-1 px-4 py-2 rounded-lg transition duration-200 hover:bg-white hover:text-red-500"
          >
            <i class="fa fa-sign-out-alt"></i> Logout
          </button>
        </form>
      </li>
      <!-- <li>
        <span class="ml-2"><i class="fa fa-user-circle text-2xl"></i></span>
      </li> -->
      <% } %>
    </ul>
  </nav>
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
  />
</header>
