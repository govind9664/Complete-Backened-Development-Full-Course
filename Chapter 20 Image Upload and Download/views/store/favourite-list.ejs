<%- include('../partials/head') %>
  <style>
    body {
      background: linear-gradient(135deg, #f8fafc 0%, #fbbf24 100%);
      min-height: 100vh;
    }
    .fav-card {
      background: rgba(255,255,255,0.97);
      box-shadow: 0 8px 32px 0 rgba(239,68,68,0.10);
      border-radius: 1.5rem;
      border: 1px solid rgba(255,255,255,0.3);
      transition: transform 0.3s, box-shadow 0.3s;
    }
    .fav-card:hover {
      transform: translateY(-6px) scale(1.03);
      box-shadow: 0 16px 40px 0 rgba(239,68,68,0.18);
    }
    .badge {
      background: #fbbf24;
      color: #fff;
      font-size: 0.85rem;
      padding: 0.2rem 0.7rem;
      border-radius: 9999px;
      margin-left: 0.5rem;
      font-weight: 600;
    }
  </style>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="flex flex-col items-center min-h-screen py-10 px-2">
      <div class="w-full max-w-6xl">
        <h2 class="text-4xl text-red-500 font-extrabold text-center mb-10 tracking-tight drop-shadow">Here are your <span class="text-yellow-500">Favourite</span> Registered Homes:</h2>
        <div class="flex flex-wrap justify-center gap-8">
          <% favouriteHomes.forEach(home => { %>
            <div class="fav-card w-full max-w-xs overflow-hidden">
              <img src="<%= home.photo %>" alt="<%= home.houseName %>" class="w-full h-52 object-cover rounded-t-2xl">
              <div class="p-5">
                <h3 class="text-2xl font-bold text-gray-800 mb-2 flex items-center gap-2">
                  <i class="fa fa-home text-red-400"></i> <%= home.houseName %>
                </h3>
                <p class="text-gray-600 mb-2 flex items-center"><i class="fas fa-map-marker-alt mr-2 text-yellow-500"></i><%= home.location %></p>
                <div class="flex justify-between items-center mb-2">
                  <span class="text-lg font-bold text-red-500 flex items-center">
                    <i class="fa fa-rupee-sign mr-1"></i><%= home.price %> <span class="badge">/ night</span>
                  </span>
                  <span class="flex items-center">
                    <i class="fa fa-star text-yellow-400 mr-1"></i>
                    <span class="text-gray-700 font-semibold"><%= home.rating %></span>
                  </span>
                </div>
                <form action="/favourites/delete/<%= home._id %>" method="POST">
                  <button class="w-full bg-gradient-to-r from-red-500 to-yellow-400 hover:from-red-600 hover:to-yellow-500 text-white py-2 mt-3 px-4 rounded-lg font-semibold shadow transition duration-300 flex items-center justify-center gap-2">
                    <i class="fa fa-heart-broken"></i> Remove from Favourite
                  </button>
                </form>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </main>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  </body>
</html>